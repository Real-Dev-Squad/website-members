#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo 'Lets check if the code is well formatted ğŸ˜'

(npm run format || yarn check-format) || (
  echo 'oops! your format doesnt looks good. Run yarn format and try commiting again!';
  false;
)

echo 'Ok, the format looks good, how about lint check? ğŸ˜‹'

(npm run lint || yarn check-lint) || (
